<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Thumbnail</th>
      <th>Name</th>
      <th>Position</th>
      <th>Year</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= image_tag(album.thumbnail_url || "https://upload.wikimedia.org/wikipedia/commons/3/3c/No-album-art.png", width: 50, height: 50) %></td>
        <td><%= album.name %></td>
        <td><%= album.position %></td>
        <td><%= album.year %></td>
        <td><%= album.artist.name %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

